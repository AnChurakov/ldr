@using Microsoft.AspNet.Identity.EntityFramework
@using ClientManager.Models
@{
    ApplicationDbContext context = new ApplicationDbContext();

    var userManager = new ApplicationUserManager(new UserStore<ApplicationUser>(context));

    var CurrentUser = User.Identity.Name;

}

<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("ManagerDW", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (User.IsInRole("admin"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Проекты <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Добавить проект", "AddProject", "Project")</li>
                            <li>@Html.ActionLink("Все проекты", "Index", "Project")</li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>@Html.ActionLink("Проекты", "Index", "Project")</li>
                }

                @if (User.IsInRole("admin"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Задачи <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Добавить задачу", "Index", "Task")</li>

                        </ul>
                    </li>
                }
                else
                {
                    <li>@Html.ActionLink("Задачи", "Index", "Task")</li>
                }

                @if (User.IsInRole("admin"))
                {
                    <li>@Html.ActionLink("Статус", "Index", "StatusWork")</li>
                    <li>@Html.ActionLink("Роли пользователей", "Index", "RoleUsers")</li>
                    <li>@Html.ActionLink("Приоритеты задач", "Index", "Priority")</li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>


